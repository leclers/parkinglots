<!-- New parking Space Proposal -->
<!-- will work on div/ card layout tuesday.... -->
  <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
    <%= simple_form_for(@parking) do |f| %>
        <%= f.input :address %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :start_time, as: :datepicker %>
        <%= f.input :finish_time, as: :datepicker %>

        <!-- adding start/finish times makes layout look strange -->
        <%= f.submit class: 'btn btn-primary' %>
    <% end %>
    <%= link_to "Back", root_path, class:'btn btn-primary' %>
  </div>
