
<div class="container">
  <% if @parkings.count == 0 %>
    <h3>seems that there is no parking space here yet.</h3>
    <h6><span class="accent-header">that's super sad, we're sorry.</span></h6>
    <%= link_to "maybe you can take the metro instead?", "http://www.stm.info/fr"  %>
  <% elsif @parkings.count == 1 %>
    <h3>lucky you, there is one parking space waiting for you.</h3>
    <h6><span class="accent-header">don't wait too much to book it!</span></h6>
    <div class="row">
      <% @parkings.each do |parking| %>
        <div class="col-xs-12">
          <%= link_to parking_path(parking), class: 'parking-image' do %>
            <div class="parking-card">
              <%= parking.description[0] %>
              <%= parking.address %>
              <%= parking.city %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div id="map" style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>"></div>
  <% else %>
    <h3>look at all the available parking spaces.</h3>
    <h6><span class="accent-header">there is one for you!</span></h6>
    <div class="row"><%= render "shared/parking-card" %></div>
    <div id="map" style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>"></div>
  <% end %>
</div>
