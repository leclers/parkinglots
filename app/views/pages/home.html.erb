<div class="banner">
  <p>search a cool parking spot</p>
</div>

<div class="container">
  <div class="row">

    <h3>start exploring the spots</h3>

    <% @home_parkings.each do |parking| %>
      <div class="col-xs-12 col-md-6 col-lg-4 parking-card">
        <div class="card-header">
          <%= parking.city %>
          <%= parking.user.email %>
        </div>
      </div>
    <% end %>

  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <h3>don't let your parking space get lonely</h3>
      <h6 class="span accent-headings">rent it out</h6>
      <%= link_to 'add your parking spot', new_parking_path, class: 'btn btn-primary btn-block' %>
    </div>
  </div>
</div>

