
<div class="container">
  <h1> Your Parking Rental Bookings</h1>
  <h4>My requests</h4>
  <ul class="list-group">

      <% @requested_bookings.each do |booking| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= booking.parking.user.email %>
      <%= booking.parking.address %>
      <%= booking.start_time.strftime('%Y-%m-%d') %>
      <%= booking.finish_time.strftime('%Y-%m-%d') %>
      <%= link_to 'Details', booking_path(booking) %>
      <span class="badge badge-primary badge-pill">
        <%= booking.status %>
      </span>
    <% end %>
    </li>

    </ul>

  <h4>Booking Requests for your parking space</h4>
    <ul class="list-group">
        <% @own_parkings_bookings.each do |booking| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= booking.user.email %>
      <%= booking.parking.address %>
      <%= booking.start_time.strftime('%Y-%m-%d') %>
      <%= booking.finish_time.strftime('%Y-%m-%d') %>
      <%= link_to 'Details', booking_path(booking) %>
      <span class="badge badge-primary badge-pill"><%= booking.status %></span>
      </li>
      <% end %>
    </ul>

</div>
